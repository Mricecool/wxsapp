/* pages/taskhistory/history.wxss */
.userinfo-top{
  position: fixed;
  width: 100%;
  box-sizing: border-box;
  background: url(../images/userinfo-bg.png) no-repeat;
  background-size: cover;
  z-index: 9999;
  top: 0;
  left: 0;
  padding: 20px 30px;
}
.userinfo-top view{
  color: #fff;
}
.page__desc{
  font-size:12px;
}
.userinfo-bottom{
  position: fixed;
  width: 100%;
  height: 55px;
  z-index: 9999;
  bottom: 0;
  background-color: #464342;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;

}
.userinfo-left{
  width: 130px;
}
.userinfo-bottom .userinfo-btn{
  height: 55px;
  border-radius: 0;
  line-height: 55px;
  border: none;
}
.userinfo-bottom .userinfo-btn.userinfo-btn-ls{
  background-color:#464342;
}
.userinfo-bottom .userinfo-btn.userinfo-btn-xj{
  background-color:#2dbb55;
}
.userinfo-right{
  -webkit-box-flex:1;
  -webkit-flex:1;
  flex:1;
  min-width:0;
}