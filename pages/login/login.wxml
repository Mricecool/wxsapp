<view class="page">
  <view class="page__hd">
    <view class="login-logo">
      <image class="login-logo-img" src="/images/logo.png"></image>
    </view>
  </view>
  <form bindsubmit="formSubmit">
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">用户名</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name="username" placeholder="请输入用户名" />
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">密码</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" type="password" name="pwd" placeholder="请输入密码" />
        </view>
      </view>
    </view>
    <view class="tip">{{tip}}</view>
    <view class="page__bd page__bd_spacing mat45">
      <button style="background-color:#2dbb55;" class="weui-btn" formType="submit" type="primary">登 录</button>
    </view>
  </form>
</view>